<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Нажата (любой кнопки, выбранной или нет) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />

            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#FF808080"
                android:centerColor="#FF505050"
                android:endColor="#FF202020" />

            <stroke
                android:width="1dp"
                android:color="#FFE0E0E0" />

            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <!-- Выбрана (state_selected=true) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />

            <!-- немного светлее, как будто подсвечена -->
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#FF5A5A5A"
                android:centerColor="#FF323232"
                android:endColor="#FF080808" />

            <!-- кант с лёгким холодным оттенком под бирюзу -->
            <stroke
                android:width="1dp"
                android:color="#FF7FD0FF" />

            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <!-- Обычное (не выбрана) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />

            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#FF555555"
                android:centerColor="#FF262626"
                android:endColor="#FF050505" />

            <stroke
                android:width="1dp"
                android:color="#FF909090" />

            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

</selector>
