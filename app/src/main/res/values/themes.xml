<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Главная тема приложения -->
    <style name="Theme.Checkers" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Базовые цвета (можно потом вынести в colors.xml) -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>

        <!-- Фоновый рисунок для всех активити -->
        <item name="android:windowBackground">@drawable/bg_premium_checkers</item>

        <!-- Без системного action bar, т.к. у тебя свой UI -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
